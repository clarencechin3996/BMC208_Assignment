<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manageVaccinationAppointment"
    android:background="@color/custom"
    android:id="@+id/constraint_layout_vaccination">

    <TextView
        android:id="@+id/text_view_info"
        android:layout_width="393dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Vaccination Appointment Info"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_view_fullname"
        android:layout_width="386dp"
        android:layout_height="52dp"
        android:fontFamily="sans-serif-black"
        android:text="Full Name: "
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_info"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_view_ic_passport"
        android:layout_width="386dp"
        android:layout_height="52dp"
        android:fontFamily="sans-serif-black"
        android:text="IC/Passport: "
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_fullname"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_view_Batch_No"
        android:layout_width="386dp"
        android:layout_height="52dp"
        android:fontFamily="sans-serif-black"
        android:text="Batch No: "
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_ic_passport"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_view_Expiry_Date"
        android:layout_width="386dp"
        android:layout_height="52dp"
        android:fontFamily="sans-serif-black"
        android:text="Expiry Date: "
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_Batch_No"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_view_Manufacturer"
        android:layout_width="386dp"
        android:layout_height="52dp"
        android:fontFamily="sans-serif-black"
        android:text="Manufacturer: "
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_Expiry_Date"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_view_Vaccine_Name"
        android:layout_width="386dp"
        android:layout_height="52dp"
        android:fontFamily="sans-serif-black"
        android:text="Vaccine Name: "
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_Manufacturer"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_confirm_appointment"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/cus"
        android:fontFamily="sans-serif-black"
        android:text="Confirm"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_Vaccine_Name"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_view_reject_appointment"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/cus"
        android:fontFamily="sans-serif-black"
        android:text="Reject"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_confirm_appointment"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_view_record_appointment"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/cus"
        android:fontFamily="sans-serif-black"
        android:text="Record"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_view_reject_appointment"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>